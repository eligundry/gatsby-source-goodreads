{
  "compilerOptions": {
    "target": "ES6",
    "skipLibCheck": true,
    "lib": ["dom", "esnext", "es7"],
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": ["src"]
}
